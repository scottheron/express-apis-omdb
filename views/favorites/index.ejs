


<div class="container">
    <h1 style="color: grey">Favorite Movies</h1>
    <% fav.forEach(function(movie) { %>
    <form action="/favorites/<%= movie.id %>/comments">
        <div class="well" >
            <h3>
                <%= movie.title %>
            </h3>
            <p>
                <%= movie.year %>
            </p>
            <p>
                <%= movie.imdbId %>
            </p>
            <p>tags - </p><p><% movie.tags.forEach(function(tags){ %>
                               <%= tags.name %>, 
                          <% }); %></p>           
            <button  class="btn red lighten-1">Comment</button>

        </div>
    </form>
    <form method="POST" action="/favorites/<%= movie.id %>/tags">
      <input placeholder="add tag" type='text' name='tag'>
      <input type="hidden" value="<%= movie.id %>" name="id">
      <input type="submit">
    </form>
    <% }); %>

</div>

 

 
